{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}

{{head-layout}}

{{title "Monitor legislativo"}}

<div id="wrapper">
  <div class="container-fluid">
    <div class="row bg-dark sticky-contact justify-content-center">
      <div class="col-12 col-md-8">
          <a href="mailto:info@redciudadana.org?Subject=Desde%20Monitor%20Legislativo"><i class="fa fa-envelope text-light mx-1"></i></a>
          <a href="mailto:info@redciudadana.org?Subject=Desde%20Monitor%20Legislativo" class="text-light">Info@redciudadana.org</a>
          <a href="https://www.facebook.com/Redciudadanagt"><i class="fa fa-facebook-square text-light float-right mx-1"></i></a>
          <a href="https://twitter.com/RedxGuate"><i class="fa fa-twitter-square text-light float-right mx-1"></i></a>
      </div>
    </div>
  </div>
  {{#bs-navbar backgroundColor="primary" position="sticky-top" fluid=false as |navbar|}}
    <div class="navbar-header">
      {{navbar.toggle}}

      {{#link-to "application" class="navbar-brand"}}
          <img
            src="app/img/logo-brand.png"
            class="img-responsive"
            title="{{nombreApp}}"
            alt="Congreso">
      {{/link-to}}
    </div>

    {{#navbar.content}}
      {{#navbar.nav classNames='navbar-right' as |nav|}}
        {{#nav.item active=false class="text-center px-5"}}{{#link-to link.route}}
            <div>
              <img src="app/img/icono-diputados.png" alt="Icono diputados" class="mx-auto px-auto">
              <p>Diputados</p>
            </div>
        {{/link-to}}{{/nav.item}}
        {{#nav.item active=false class="text-center px-5"}}{{#link-to link.route}}
            <div>
              <img src="app/img/icono-quien.png" alt="Icono quien me representa" class="mx-auto px-auto">
              <p>¿Quién me representa?</p>
            </div>
        {{/link-to}}{{/nav.item}}
        {{#nav.item active=false class="text-center px-5"}}{{#link-to link.route}}
            <div>
              <img src="app/img/icono-metodologia.png" alt="Icono metodología" class="mx-auto px-auto">
              <p>Metodología</p>
            </div>
        {{/link-to}}{{/nav.item}}
      {{/navbar.nav}}
    {{/navbar.content}}
  {{/bs-navbar}}

  <div class="content-container">
    {{outlet}}
  </div>
</div>

<div id="footer">
  <div class="container">
    {{!-- General info --}}
    <div class="row">
      {{!-- ¿Te gusta lo que hacemos? --}}
      <div class="col-12 col-sm-6 col-md-4">
        <h6>¿Te gusta lo que hacemos?</h6>
        <ul class="list-unstyled">
          <li>
            <a
              href="http://donacion.redciudadana.org/"
              target="_blank"
              rel="noopener">
              <i class="fa fa-heart"></i>Donaciones
            </a>
          </li>
          <li>
            <a
              href="http://voluntarios.redciudadana.org/"
              target="_blank"
              rel="noopener">
              <i class="fa fa-users"></i>Voluntariado
            </a>
          </li>
        </ul>
      </div>
      {{!-- Contáctanos --}}
      <div class="col-12 col-sm-6 col-md-4 order-md-3">
        <h6>Contáctanos:</h6>
        <ul class="list-unstyled">
          <li>
            <a
              href="mailto:info@redciudadana.org.gt"
              target="_blank"
              rel="noopener">
              <i class="fa fa-envelope"></i>info@redciudadana.org
            </a>
          </li>
          <li>
            <i class="fa fa-map-marker"></i>Guatemala, Guatemala
          </li>
        </ul>
      </div>
      {{!-- Social follow --}}
      <div class="col-12 follow col-md-4">
        <h6>Síguenos en:</h6>
        <div class="d-flex">
          <a
            href="https://www.facebook.com/Redciudadanagt/"
            target="_blank"
            rel="noopener"
            class="image-opacity">
            <img
              src="mi-guatemala/img/icon-fb-white.png"
              alt="Facebook">
          </a>
          <a
            href="https://twitter.com/RedxGuate"
            target="_blank"
            rel="noopener"
            class="image-opacity">
            <img
              src="mi-guatemala/img/icon-tw-white.png"
              alt="Twitter">
          </a>
          <a
            href="https://www.instagram.com/redxguate/"
            target="_blank"
            rel="noopener"
            class="image-opacity">
            <img
              src="mi-guatemala/img/icon-in-white.png"
              alt="Instragram">
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="red-footer">
  <div class="container">
    <div class="row">
      {{!-- Red Ciudadana --}}
      <div class="col-12 col-md-8 d-flex">
        <a
          href="http://redciudadana.org/"
          target="_blank"
          rel="noopener">
          <img
            src="mi-guatemala/img/logo-rc-color.png"
            alt="Logo de Red Ciudanana"
            class="logo-rc m-auto mt-md-3">
        </a>
        <p class="my-auto">Desarrollado por Asociación Civil Red Ciudadana</p>
      </div>
      <div class="col-12 col-md-4 d-flex my-4 cc-icons text-left text-md-right">
        <a
          href="https://creativecommons.org/licenses/by-sa/3.0/gt/"
          target="_blank"
          rel="noopener"
          class="ml-0 ml-md-auto">
          <img
          src="mi-guatemala/img/icon-cc-cc.png"
          alt="Creative Commons">
          <img
            src="mi-guatemala/img/icon-cc-by.png"
            alt="Creative Commons - Atribución">
          <img
            src="mi-guatemala/img/icon-cc-sa.png"
            alt="Creative Commons - Compartir Igual">
        </a>
      </div>
    </div>
  </div>
</div>
