          <h3 style="margin-top:auto;margin-bottom:auto;">Plan de Trabajo</h3>
      </div>
      <div class="col-md-12" style="margin-top: 10px;">
        <p class="justify">{{model.perfil.planTrabajo}}</p>
      </div>
    </div>
  </div> --}}

</div>

<div>
  {{#each-in model.perfil.recuadros as |key item|}}
    <div class="panel panel-default">
      {{#if item.label}}<div class="panel-heading font-weight-600">{{{item.label}}}</div>{{/if}}

      <div class="panel-body">
        {{{item.value}}}
      </div>
    </div>
  {{/each-in}}
</div>


