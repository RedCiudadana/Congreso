<div class="container-fluid">
    {{#if model.config.useFrontFilterWidget}}
    <div class="row search-container-row">
      <div class="search-container search-and-filter">
        <div class="search-container" style="text-align: center;">
          {{#power-select
            selected=currentCandidato
            options=model.diputados
            onchange=(route-action 'selectPerfil')
            searchField='nombre'
            placeholder='Busca tu candidato'
            noMatchesMessage='Sin resultados'
              as |candidato|
          }}
            <strong>{{candidato.nombre}}</strong>
          {{/power-select}}
        </div>

        <div class="filters-container">
          <strong>Filtrar por: </strong>
          <label>
            {{one-way-select
              esTodo
              update=(queue
                (action (mut esTodo))
                (action 'applyFilter')
              )
            }}
            Todo
          </label>

          <label>
            {{one-way-select
              esMujer
              update=(queue
                (action (mut esMujer))
                (action 'applyFilter')
              )
            }}
            Mujer
          </label>

          <label>
            {{one-way-select
              esHombre
              update=(queue
                (action (mut esHombre))
                (action 'applyFilter')
              )
            }}
            Hombre
         </label>

          <label>
            {{one-way-select
              estaEnProceso
              update=(queue
                (action (mut estaEnProceso))
                (action 'applyFilter')
              )
            }}
            En proceso
         </label>

          <label>
            {{one-way-select
              estaDescalificado
              update=(queue
                (action (mut estaDescalificado))
                (action 'applyFilter')
              )
            }}
            Descalificado
         </label>
       </div>
      </div>
    </div>
  {{/if}}

    {{front-porfolio-visualization
      perfiles=model.diputados
      onDidInsertElement=(action 'applyFilter')
    }}
</div>
